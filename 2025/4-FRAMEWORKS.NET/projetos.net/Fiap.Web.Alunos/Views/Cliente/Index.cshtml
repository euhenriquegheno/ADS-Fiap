@model IEnumerable<ClienteModel>

<h1>Clientes</h1>

@if (!string.IsNullOrEmpty((String)TempData["mensagemSucesso"]))
{
    <div class="alert alert-warning" role="alert">@TempData["mensagemSucesso"]</div>
}

<p>
    <a asp-action="Create" asp-controller="Cliente">Novo Cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Sobrenome</th>
            <th>Email</th>
            <th>Nascimento</th>
            <th>Representante</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>
                    <label>@cliente.ClienteId</label>
                </td>
                <td>
                    <label>@cliente.Nome</label>
                </td>
                <td>
                    <label>@cliente.Sobrenome</label>
                </td>
                <td>
                    <label>@cliente.Email</label>
                </td>
                <td>
                    <label>@cliente.DataNascimento.ToShortDateString()</label>
                </td>
                <td>
                    <label>@cliente.Representante?.NomeRepresentante ?? "N/A"</label>
                </td>
                <td>
                    <a asp-controller="Cliente" asp-action="Edit" asp-route-id="@cliente.ClienteId">Editar</a>
                    <a asp-controller="Cliente" asp-action="Detail" asp-route-id="@cliente.ClienteId">Consultar</a>
                    <a asp-controller="Cliente" asp-action="Delete" asp-route-id="@cliente.ClienteId">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>